CFLAGS = -pipe -std=c++1z -lgmp -lgmpxx -fopenmp
LDFLAGS =
    
ifdef DEBUG
    CFLAGS += -O0 -g
endif

ifdef RELEASE
    CFLAGS += -O3 -march=native
    LDFLAGS += -flto
endif

: foreach src/solutions/1.cpp src/main.cpp |> g++ -c %f -o %o $(CFLAGS) |> obj/%B.o
: obj/*.o |> g++ %f -o %o $(LDFLAGS) |> euler

